{
  "name:": "wapipo",
  "version": "1.0.0",
  "description": "A web automation tool to broadcast whatsapp messages.",
  "main": "dist/index.js",
  "pkg": {
    "assets": [
      "node_modules/selenium-webdriver/lib/atoms/is-displayed.js",
      "node_modules/selenium-webdriver/lib/atoms/get-attribute.js",
      "node_modules/selenium-webdriver/lib/atoms/*.js"
    ]
  },
  "bin": "dist/index.js",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.10",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "lint": "eslint ./src/**/*.ts",
    "test": "jest",
    "package": "npm run build && pkg -o ./release/wapipo -t node14-linux,node14-macos,node14-win ."
  },
  "dependencies": {
    "@types/selenium-webdriver": "^4.1.22",
    "commander": "^12.0.0",
    "selenium-webdriver": "^4.20.0"
  }
}
